<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_group_18121"
    tools:context=".signup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="129dp"
            android:layout_height="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="98dp"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="35dp"
            android:text="Full name"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="324dp"
            android:layout_height="75dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="324dp"
                android:layout_height="65dp"
                android:background="@drawable/custom_textfield"
                android:ems="10"
                android:hint="Your name"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            android:text="E-mail"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="324dp"
            android:layout_height="75dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="324dp"
                android:layout_height="65dp"
                android:background="@drawable/custom_textfield"
                android:ems="10"
                android:hint="Your email or phone"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            android:text="Password"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="324dp"
            android:layout_height="75dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText"
                android:layout_width="324dp"
                android:layout_height="65dp"
                android:background="@drawable/custom_textfield"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button

            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="Sign UP"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textAllCaps="false"
                android:textColor="#5B5B5E"
                android:textSize="17dp" />

            <Button
                android:id="@+id/login"
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:background="#00000000"
                android:fontFamily="sans-serif"
                android:text="Login"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:textColor="#FE724C" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View

            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with"
            android:textAllCaps="false"
            android:textColor="#5B5B5E"
            android:textSize="17dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">
            <Button
                android:layout_marginRight="50dp"
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:background="@drawable/custom_bt2"
                android:drawableLeft="@drawable/ic_group_17863"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="FACEBOOK"/>
            <Button
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:background="@drawable/custom_bt2"
                android:drawableLeft="@drawable/ic_super_g"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="GOOGLE"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>